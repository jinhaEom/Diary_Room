<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginTop="12dp"
        android:layout_width="match_parent"
        android:background="@color/gray_100"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="12dp"
            android:text="10:00"
            android:textSize="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/weatherImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/cloudy"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvTime" />

        <TextView
            android:id="@+id/tvHumidity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50%"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/weatherImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/weatherImage"
            app:layout_constraintTop_toTopOf="@+id/weatherImage" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvSky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="@id/weatherImage"
            app:layout_constraintStart_toStartOf="@id/weatherImage"
            app:layout_constraintTop_toBottomOf="@id/weatherImage"
            tools:text="맑음" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRainType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/weatherImage"
            app:layout_constraintStart_toStartOf="@id/weatherImage"
            app:layout_constraintTop_toBottomOf="@id/weatherImage"
            tools:text="눈" />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvTemp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="24dp"
            app:layout_constraintBottom_toBottomOf="@+id/weatherImage"
            app:layout_constraintEnd_toStartOf="@+id/weatherImage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/weatherImage"
            tools:text="10도씨" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRecommendsTx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxEms="15"
            android:maxLines="2"
            android:text="OOTD"
            android:layout_marginStart="12dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvSky"
        />
        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvRecommends"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="오늘 옷차림은 이것!"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvRecommendsTx"
            app:layout_constraintTop_toBottomOf="@id/tvRecommendsTx"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>
